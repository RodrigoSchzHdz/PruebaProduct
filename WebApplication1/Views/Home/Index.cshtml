@model IEnumerable<WebApplication1.Product>

@{
    ViewBag.Title = "Home Page";
}

<div ng-app="myProductApp" ng-controller="productCtrl">
    @using (Html.BeginForm("GuardarProducto", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <div class="row">
            <div class="col-md-12">
                <div class="col-md-4"></div>
                <div class="col-md-4">
                    <center>
                        <label>Nombre Producto</label>
                        <input type="text" id="nameProduct" name="nameProduct" class="form-control" 
                               placeholder="Nombre Producto"/>
                    </center>
                </div>
                <div class="col-md-4"></div>
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-md-12">
                <div class="col-md-4"></div>
                <div class="col-md-4">
                    <center>
                        <button type="submit" class="btn btn-primary">Guardar Producto</button>
                    </center>
                </div>
                <div class="col-md-4"></div>
            </div>
        </div>
    }
    <hr />
    <div class="row">
        <div class="col-md-12">
            <div class="col-md-2"></div>
            <div class="col-md-8 table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th style="background-color:#428bca;color:white;">Acciones</th>
                            <th style="background-color:#428bca;color:white;">Nombre de Producto</th>
                            <th style="background-color:#428bca;color:white;">Fecha de Registro</th>
                            <th style="background-color:#428bca;color:white;">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <button type="button" class="btn btn-warning" ng-click="showEditProduct(@item.id);">
                                        <i class="glyphicon glyphicon-pencil"></i>
                                    </button>
                                </td>
                                <td>@item.nombre</td>
                                <td>@item.fecha_alta</td>
                                <td>
                                    <button type="button" class="btn btn-danger" ng-click="deleteProduct(@item.id);">
                                        <i class="glyphicon glyphicon-trash"></i>
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="col-md-2"></div>
        </div>
    </div>
    <div id="myModal" class="modal fade" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Editar Producto</h4>
                </div>
                <div class="modal-body">
                    <center>
                        <label>Nombre Producto</label>
                        <input type="text" id="newName" name="newName" ng-model="newName" class="form-control"
                               placeholder="Nuevo Nombre" />
                    </center>
                    <br />
                    <center>
                        <button type="button" class="btn btn-primary" ng-click="editProduct();">Editar Producto</button>
                    </center>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/Scripts/angular.min.js"></script>
    <script src="~/Scripts/metods.js"></script>
}